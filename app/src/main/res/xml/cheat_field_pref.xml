<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="@string/pre_cheat_field_category_original">

        <EditTextPreference
                app:key="@string/key_original_field_device_id"
                app:title="@string/pre_title_cheat_device_id"
                app:persistent="false"/>

        <EditTextPreference
                app:key="@string/key_original_field_line1_num"
                app:title="@string/pre_title_cheat_line_one_num"
                app:persistent="false"/>

        <EditTextPreference
                app:key="@string/key_original_field_sim_serial"
                app:title="@string/pre_title_cheat_sim_serial"
                app:persistent="false"/>
    </PreferenceCategory>


    <PreferenceCategory
            app:title="@string/pre_cheat_field_category_cheated">

        <EditTextPreference
                app:key="@string/key_cheat_field_device_id"
                app:title="@string/pre_title_cheat_device_id"
                app:persistent="false"/>

        <EditTextPreference
                app:key="@string/key_cheat_field_line1_num"
                app:title="@string/pre_title_cheat_line_one_num"
                app:persistent="false"/>

        <EditTextPreference
                app:key="@string/key_cheat_field_sim_serial"
                app:title="@string/pre_title_cheat_sim_serial"
                app:persistent="false"/>

        <SwitchPreferenceCompat
                app:key="@string/key_cheat_field_installed_apps"
                app:title="@string/pre_title_cheat_installed_apps"
                app:persistent="false"/>
    </PreferenceCategory>
</PreferenceScreen>
