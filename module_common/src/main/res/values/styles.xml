<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.CategoryTitle" parent="TextAppearance.Small">
        <!--<item name="android:textColor">?colorAccent</item>-->
    </style>

    <style name="TextAppearance.Medium" parent="@style/TextAppearance.AppCompat.Medium"/>

    <style name="TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Small"/>

    <style name="TextAppearance.Switch" parent="TextAppearance.Medium"/>

    <style name="TextAppearance.Small.SwitchBar">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Used to color the switch bar controls -->
    <style name="ThemeOverlay.SwitchBar" parent="ThemeOverlay.AppCompat">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="SwitchBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="switchBarMarginStart">@dimen/common_view_margin_default</item>
        <item name="switchBarMarginEnd">@dimen/common_view_margin_default</item>
        <item name="switchBarBackgroundColor">?menuIconTint</item>
        <item name="switchBarTextColor">@color/md_white</item>
        <item name="colorAccent">@color/md_white</item>
    </style>

    <style name="SwitchBarTheme.Light">
        <item name="switchBarBackgroundColor">?menuIconTint</item>
        <item name="switchBarTextColor">@color/md_white</item>
        <item name="colorAccent">@color/md_white</item>
    </style>

    <style name="ToolbarThemeCommon">
        <item name="colorControlNormal">?menuIconTint</item>
        <!--<item name="colorControlActivated">?torMenuIconTintColor</item>-->
        <item name="android:colorControlNormal">?menuIconTint</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <!--<item name="android:colorControlActivated">?torMenuIconTintColor</item>-->
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="OverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?menuIconTint</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat"/>

    <style name="AppBarOverlayLight" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="PopupOverlayLight" parent="ThemeOverlay.AppCompat"/>


    <style name="SwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
    </style>
</resources>